# Bug Finder Notification System - Environment Configuration
# Copy this file to .env and fill in your actual values
# IMPORTANT: Never commit .env with real credentials to version control

# ============================================================================
# Email Configuration (SMTP)
# ============================================================================
# SMTP server configuration for email notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
SMTP_FROM=bug-finder@example.com

# ============================================================================
# Slack Configuration
# ============================================================================
# Webhook URLs for Slack integration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
SLACK_ALERTS_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/ALERTS/URL

# ============================================================================
# Generic Webhook Configuration
# ============================================================================
# Custom webhook endpoint for integrations
WEBHOOK_URL=https://api.example.com/webhooks/bug-finder
WEBHOOK_TOKEN=your-secret-token-here

# ============================================================================
# Notification Configuration File
# ============================================================================
# Path to notification configuration (JSON format)
NOTIFICATION_CONFIG_PATH=./notifications.json

# ============================================================================
# Feature Flags
# ============================================================================
# Enable/disable notification system
NOTIFICATIONS_ENABLED=true

# Enable/disable email notifications by default
EMAIL_NOTIFICATIONS_ENABLED=false

# Enable/disable Slack notifications by default
SLACK_NOTIFICATIONS_ENABLED=false
